<%- include('header') %>

<main class="zoom">
  <svg id="back-arrow" onclick="history.back()" width="40" height="40" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
    <path d="M21 12H4M11 5l-8 7 8 7" stroke="white" stroke-width="1" fill="none" stroke-linecap="round" stroke-linejoin="round" />
  </svg>

  <div class="login">
    <svg id="profile" viewBox="0 0 32 32" width="200" height="200" xmlns="http://www.w3.org/2000/svg">
      <circle cx="16" cy="16" r="14" fill="#cccccc" opacity="30%" />
      <path d="M12.73 13.1a3.271 3.271 0 1 1 3.27 3.2 3.237 3.237 0 0 1-3.27-3.2zm-2.73 9.069h1.088a4.91 4.91 0 0 1 9.818 0h1.094a5.884 5.884 0 0 0-3.738-5.434 4.238 4.238 0 0 0 2.1-3.635 4.366 4.366 0 0 0-8.73 0 4.238 4.238 0 0 0 2.1 3.635 5.878 5.878 0 0 0-3.732 5.434z" fill="#eee" />
    </svg>
    <h2>Sign In</h2>
    <form method="post" action="/login">
      <input type="text" name="username" placeholder="Username" autofocus required />
      <div class="password-input">
        <input type="password" name="password" placeholder="Password" required />
        <div class="button">
          <button type="submit">
            <svg id="arrow" width="20" height="20" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 12h16M13 5l8 7-8 7" stroke="white" stroke-width="1" fill="none" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
          </button>
        </div>
      </div>
    </form>
  </div>
</main>

<%- include('footer') %>
